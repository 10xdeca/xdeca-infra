[server]
hosts = 0.0.0.0:5232
max_connections = 20
timeout = 30

[auth]
type = htpasswd
htpasswd_filename = /config/users
htpasswd_encryption = bcrypt

[rights]
type = from_file
file = /config/rights

[storage]
filesystem_folder = /data/collections
hook = git add -A && (git diff --cached --quiet || git commit -m "Changes by \"%(user)s\"")

[logging]
level = warning
