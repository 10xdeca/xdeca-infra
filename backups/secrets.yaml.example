# Oracle Cloud Object Storage credentials for backups
# Uses native OCI API (not S3 compatibility)
#
# Copy to secrets.yaml and encrypt with: sops -e -i secrets.yaml
#
# Prerequisites:
# 1. OCI CLI configured locally (~/.oci/config)
# 2. API key created in OCI Console

# OCI namespace (run: oci os ns get)
oci_namespace: your-namespace

# Region
oci_region: ap-melbourne-1

# Bucket name
bucket_name: xdeca-backups

# OCI API credentials (from ~/.oci/config)
oci_user: ocid1.user.oc1..xxxxx
oci_tenancy: ocid1.tenancy.oc1..xxxxx
oci_fingerprint: xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx

# OCI API private key (base64 encoded)
# Generate with: cat ~/.oci/oci_api_key.pem | base64 | tr -d '\n'
oci_api_key_base64: LS0tLS1CRUdJTi4uLg==
